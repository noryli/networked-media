<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/css/leaderboard.css">
    <script src="/js/leaderboard.js"></script>
</head>
<body>

    <!-- Back to Home Button (Icon) -->
    <a href="/home" class="back-home">‚¨Ö</a>
    </a>

    <!-- Title -->
    <h1 class="leaderboard-title">Cat Fashion Leaderboard</h1>

    <!-- Podium for Top 3 -->
    <div class="podium">
        <% if (cats[1]) { %>
            <div class="podium-box second-place">
                <span class="rank">ü•à</span>
                <img src="<%= cats[1].image %>" class="cat-image">
                <p class="cat-name"><%= cats[1].name %></p>
                <p><%= cats[1].likes %> ‚ù§Ô∏è</p>
            </div>
        <% } %>

        <% if (cats[0]) { %>
            <div class="podium-box first-place">
                <span class="rank">ü•á</span>
                <img src="<%= cats[0].image %>" class="cat-image">
                <p class="cat-name"><%= cats[0].name %></p>
                <p><%= cats[0].likes %> ‚ù§Ô∏è</p>
            </div>
        <% } %>

        <% if (cats[2]) { %>
            <div class="podium-box third-place">
                <span class="rank">ü•â</span>
                <img src="<%= cats[2].image %>" class="cat-image">
                <p class="cat-name"><%= cats[2].name %></p>
                <p><%= cats[2].likes %> ‚ù§Ô∏è</p>
            </div>
        <% } %>
    </div>

    <!-- List for 4th place onwards -->
    <div class="ranking-list">
        <% for (let i = 3; i < cats.length; i++) { %>
            <div class="list-item">
                <span class="list-rank"><%= i + 1 %>.</span>
                <img src="<%= cats[i].image %>" class="list-image">
                <span class="list-name"><%= cats[i].name %></span>
                <span class="list-likes"><%= cats[i].likes %> ‚ù§Ô∏è</span>
            </div>
        <% } %>
    </div>

</body>
</html>
